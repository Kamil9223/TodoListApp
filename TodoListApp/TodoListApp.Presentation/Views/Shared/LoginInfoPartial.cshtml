@using System.Security.Claims;
@{ 
    var email = Context.User.Claims.Where(x => x.Type == ClaimTypes.Email).First().Value;
}

<ul class="navbar-nav">
    <li class="nav-item">
        <form asp-controller="Auth" asp-action="Profile">
            <button class="btn btn-link text-dark" type="submit">@email</button>
        </form>
    </li>
    <li class="nav-item">
        <form asp-controller="Auth" asp-action="Logout">
            <button class="btn btn-link text-dark" type="submit">Logout</button>
        </form>
    </li>
</ul>