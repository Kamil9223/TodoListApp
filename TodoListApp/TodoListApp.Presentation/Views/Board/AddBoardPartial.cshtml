@model TodoListApp.Application.Boards.Commands.AddBoardCommand;

<div class="modal fade" id="addBoard">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addBoardLabel">Add Category</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="form-group">
                    <form action="@Url.Action("AddBoard")" redirect="@Url.Action("Redirect")">
                        <label asp-for="categoryName"></label>
                        <input asp-for="categoryName" class="form-control" />
                        <span asp-validation-for="categoryName" class="text-danger"></span>
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-dismiss="modal">Zamknij</button>
                <button type="button" class="btn btn-dark" data-save="modal">Zapisz</button>
            </div>
        </div>
    </div>
</div>
