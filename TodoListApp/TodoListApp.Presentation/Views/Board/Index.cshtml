@model TodoListApp.Application.Boards.DTO.BoardDto
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    
    <div class="row">

        <div id="sideMenu" class="col-3">
            @if (!Model.Categories.Any())
            {
                <span>There are no categories</span>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var category in Model.Categories)
                    {
                        <li class="d-flex d-block mt-2 shadow rounded">
                            <button class="btn btn-light w-100 h-100" value="@category.Key">@category.Value</button>   
                        </li>
                    }
                </ul>
            }

            <hr />
            <div class="d-flex justify-content-center">
                <button class="btn btn-dark" type="button" data-toggle="ajax-modal"
                        data-url="@Url.Action("AddBoard")">
                    New Category
                </button>
            </div>   
        </div>

        <div id="dynamicContentForAddingBoardModal"></div>

        <div id="dynamicContent" class="col">
            <partial name="../Task/Tasks" model="@Model.Tasks" />
        </div>

    </div>

</div>
